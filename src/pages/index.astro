---
import Layout from '../layouts/Layout.astro';
import Categories from '../components/Categories.astro';
import ProductsHome from '../components/ProductsHome.astro'
import { ReadBlocks } from '../components/ReadBlocks.tsx';

import fetchApi from '../lib/strapi'

const homeData = await fetchApi({
	endpoint: 'home',
	wrappedByKey: 'data'
})
---

<Layout title="Home commerce">
	<main>
		<header>
			<h1>{homeData.title}</h1>
			<div>
				<ReadBlocks content = { homeData.description } />
				
			</di>
		</header>

		<section class="main-section">
			<h2>Categorias</h2>
			<Categories />
	
			<h2>Algunos Productos</h2>
			<ProductsHome />
	
			<h2>Direccion</h2>
			Seccion de direccion
		</section>
	
	</main>
</Layout>

<style>

	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: 100vw;
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	
	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 10px;
	}

	h2 {
		font-size: 3rem;
		font-weight: 400;
		color: grey;
		margin-bottom: 20px;
	}
	
</style>
